/* Reset and base styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html, body {
    height: 100%;
    margin: 0;
    padding: 0;
}

body {
    font-family: 'Inter', sans-serif;
    background: #0A0A0A;
    color: #FFFFFF;
    overflow-x: hidden;
    line-height: 1.6;
}

/* This class still correctly locks the main page scroll */
body.modal-open {
    overflow: hidden;
}

/* Wave Animation Canvas */
.wave-canvas {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 0;
    background: radial-gradient(ellipse at center, rgba(139, 93, 255, 0.03) 0%, rgba(10, 10, 10, 1) 70%);
}

/* Animated background stars */
.stars {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 10;
}

.star {
    position: absolute;
    width: 2px;
    height: 2px;
    background: #8B5DFF;
    border-radius: 50%;
    opacity: 0.7;
    animation: twinkle 3s infinite;
}

@keyframes twinkle {
    0%, 100% { opacity: 0.3; transform: scale(1); }
    50% { opacity: 1; transform: scale(1.2); }
}

/* Navigation */
.navbar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    padding: 20px 0;
    background: rgba(10, 10, 10, 0.9);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(139, 93, 255, 0.1);
    z-index: 1000;
}

.nav-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 20px;
}

.nav-left, .nav-right {
    display: flex;
    align-items: center;
    gap: 32px;
}

.nav-item {
    font-size: 14px;
    color: #CCCCCC;
    cursor: pointer;
    transition: color 0.3s ease;
}

.nav-item:hover {
    color: #8B5DFF;
}

.nav-center {
    display: flex;
    align-items: center;
    gap: 12px;
}

.logo-stamp {
	width: 80px;
	height: 80px;
	opacity: 0.85; /* Memberi efek stempel */
	flex-shrink: 0;
}

.logo-japanese {
    font-family: 'Yuji Syuku', serif;
    font-size: 28px;
    color: #FFFFFF;
    ruby-position: over;
    font-weight: 400;
    line-height: 1;
}

.logo-japanese rt {
    font-family: 'Inter', sans-serif;
    font-size: 0.4em;
    color: #999;
    font-weight: 600;
    margin-bottom: -15px;
}

.get-started-btn {
    background: #8B5DFF;
    color: #FFFFFF;
    border: none;
    padding: 10px 24px;
    border-radius: 25px;
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
}

.get-started-btn:hover {
    background: #7B4DEF;
    transform: translateY(-1px);
}

.mobile-menu-btn {
    display: none;
    background: #8B5DFF;
    color: #FFFFFF;
    border: none;
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
}

.mobile-menu-btn:hover {
    background: #7B4DEF;
}

/* Main content */
.main-content {
    position: relative;
    z-index: 20;
}

/* Hero section */
.hero-section {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 0 20px;
}

.hero-content {
    max-width: 800px;
}

.hero-subtitle {
    font-size: 16px;
    color: #8B5DFF;
    font-weight: 500;
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.hero-title {
    font-size: 54px;
    font-weight: 600;
    line-height: 1.1;
    margin-bottom: 32px;
    background: linear-gradient(135deg, #FFFFFF 0%, #CCCCCC 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.hero-description {
    font-size: 18px;
    color: #AAAAAA;
    line-height: 1.7;
    margin-bottom: 48px;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
}

.hero-buttons {
    display: flex;
    gap: 20px;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
}

.primary-button {
    background: linear-gradient(135deg, #8B5DFF 0%, #7B4DEF 100%);
    color: #FFFFFF;
    border: none;
    padding: 16px 32px;
    border-radius: 30px;
    font-size: 16px;
    font-weight: 500;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 8px;
    transition: all 0.3s ease;
}

.primary-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(139, 93, 255, 0.3);
}

.secondary-button {
    background: transparent;
    color: #FFFFFF;
    border: 2px solid rgba(139, 93, 255, 0.3);
    padding: 14px 32px;
    border-radius: 30px;
    font-size: 16px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
}

.secondary-button:hover {
    border-color: #8B5DFF;
    background: rgba(139, 93, 255, 0.1);
    transform: translateY(-2px);
}

/* Mission section */
.mission-section {
    padding: 120px 40px;
    background: linear-gradient(180deg, rgba(139, 93, 255, 0.02) 0%, rgba(10, 10, 10, 1) 100%);
}

.mission-container {
    max-width: 900px;
    margin: 0 auto;
    text-align: center;
}

.mission-title {
    font-size: 48px;
    font-weight: 600;
    margin-bottom: 60px;
    color: #FFFFFF;
}

.mission-text {
    text-align: left;
    margin-bottom: 60px;
}

.mission-text p {
    font-size: 18px;
    color: #CCCCCC;
    line-height: 1.8;
    margin-bottom: 28px;
}

.mission-cta {
    text-align: center;
}

.cta-button {
    background: linear-gradient(135deg, #8B5DFF 0%, #7B4DEF 100%);
    color: #FFFFFF;
    border: none;
    padding: 18px 40px;
    border-radius: 35px;
    font-size: 18px;
    font-weight: 600;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    gap: 12px;
    transition: all 0.3s ease;
}

.cta-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 15px 40px rgba(139, 93, 255, 0.4);
}

/* Features section */
.features-section {
    padding: 120px 40px;
    background: #0A0A0A;
}

.features-container {
    max-width: 1100px;
    margin: 0 auto;
}

.features-title {
    font-size: 48px;
    font-weight: 600;
    text-align: center;
    margin-bottom: 80px;
    color: #FFFFFF;
}

.features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 40px;
}

.feature-card {
    background: rgba(139, 93, 255, 0.05);
    border: 1px solid rgba(139, 93, 255, 0.1);
    border-radius: 20px;
    padding: 40px 30px;
    text-align: center;
    transition: all 0.3s ease;
}

.feature-card:hover {
    transform: translateY(-5px);
    border-color: rgba(139, 93, 255, 0.3);
    box-shadow: 0 10px 30px rgba(139, 93, 255, 0.1);
}

.feature-icon {
    font-size: 48px;
    margin-bottom: 24px;
}

.feature-card h3 {
    font-size: 24px;
    font-weight: 600;
    margin-bottom: 16px;
    color: #FFFFFF;
}

.feature-card p {
    color: #AAAAAA;
    line-height: 1.7;
    font-size: 16px;
}

/* Modal styles */
.modal {
  display: none; 
  position: fixed; 
  z-index: 1000; 
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.5);
}

/* The main overlay for the modal */
.modal-overlay {
    display: none; /* Your JS changes this to 'flex' to show it */
    position: fixed; 
    z-index: 2000;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.85);
    backdrop-filter: blur(5px);

    /* THIS IS THE KEY: We use Flexbox to perfectly center the child */
    display: flex;
    align-items: center;
    justify-content: center;

    /* This padding ensures the modal content doesn't touch the screen edges */
    padding: 10px;
}
/* The white box containing the modal content */
.modal-content {
    background: #FDFDF6;
    color: #3C3C3C;
    max-width: 600px;
    width: 100%; /* The content will fill the padded area of the overlay */

    /* THE SECOND KEY: We constrain the height and make THIS element scrollable */
    max-height: 100%;
    overflow-y: auto;
    
    padding: 35px;
    border-radius: 12px;
    box-shadow: 0 20px 60px rgba(139, 93, 255, 0.2);
    border: 1px solid rgba(139, 93, 255, 0.1);
    position: relative;
    font-family: 'Lora', serif;
}


/* For mobile phones - The main fix is here */
@media (max-width: 600px) {
  .modal-content {
    width: 95%; 
    /* The conflicting margin rule has been completely removed. */
    /* Flexbox on .modal-overlay is handling the centering perfectly now. */
  }
}

.modal-close {
    position: absolute;
    top: 15px;
    right: 15px;
    background: none; border: none; font-size: 28px; color: #666;
    cursor: pointer; width: 40px; height: 40px; display: flex;
    align-items: center; justify-content: center; border-radius: 50%;
    transition: all 0.3s ease;
}

.modal-close:hover { background: #f0f0f0; color: #333; }

.modal-header {
    text-align: center;
    border-bottom: 1px solid #E0E0E0;
    padding-bottom: 25px;
    margin-bottom: 30px;
}

.modal-japanese-title {
    font-family: 'Yuji Syuku', serif;
    font-size: 4.5rem;
    color: #333;
    ruby-position: over;
    font-weight: 400;
    line-height: 1;
}

.modal-japanese-title rt {
    font-family: 'Inter', sans-serif;
    font-size: 0.9rem;
    color: #666;
    font-weight: 600;
}

.modal-body {
    color: #3C3C3C;
    font-size: 1.1rem;
    line-height: 1.8;
    margin-bottom: 30px;
    font-family: 'Lora', serif;
}

.modal-body p {
    margin-bottom: 1.2em;
}

.modal-list {
    list-style: none;
    padding-left: 0;
    margin: 25px 0;
}

.modal-list li {
    margin-bottom: 10px;
    font-family: 'Inter', sans-serif;
}

.modal-final-pitch {
    font-weight: 600;
    text-align: center;
    font-size: 1.15rem;
    margin-top: 30px;
}

.discord-link {
    display: block;
    text-decoration: none;
    color: #333;
    background-color: #F8F9FA;
    border: 1px solid #EAEAEA;
    padding: 20px;
    border-radius: 8px;
    margin-top: 20px;
    margin-bottom: 40px;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
    cursor: pointer;
}

.discord-link:hover {
    border-color: #8B5DFF;
    box-shadow: 0 5px 15px rgba(139, 93, 255, 0.2);
}

.discord-header {
    font-family: 'Inter', sans-serif;
    font-weight: 600;
    font-size: 0.9rem;
    color: #666;
    margin-bottom: 8px;
}

.discord-url {
    font-family: 'Inter', sans-serif;
    font-weight: 600;
    font-size: 1.1rem;
    color: #8B5DFF;
    overflow-wrap: break-word;
    word-wrap: break-word;

    /* --- ADD THESE THREE LINES --- */
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.arrow {
    font-weight: bold;
    transition: transform 0.2s ease;
    display: inline-block;
}

.discord-link:hover .arrow {
    transform: translateX(5px);
}

.modal-signature {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    margin-top: 20px;
}

.modal-logo {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, #8B5DFF 0%, #7B4DEF 100%);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 32px;
    font-weight: bold;
    flex-shrink: 0;
}

.signature-text {
    text-align: right;
}

.signature-title {
    text-align: right;
    margin-bottom: -10px;
    color: #333;
}

.signature-name {
    font-family: 'Cedarville Cursive', cursive;
    font-size: 1.9rem;
    color: #333;
    text-align: right;
}

/* Responsive design */
@media (max-width: 1024px) {
    .nav-left, .nav-right {
        display: none;
    }
    
    .mobile-menu-btn {
        display: block;
    }
    
    .logo-japanese {
        font-size: 24px;
    }
}

@media (max-width: 768px) {
    .nav-container {
        padding: 0 20px;
    }
    
    .hero-section {
        padding: 0 20px;
    }
    
    .hero-title {
        font-size: 40px;
    }
    
    .hero-description {
        font-size: 16px;
    }
    
    .hero-buttons {
        flex-direction: column;
        align-items: stretch;
    }
    
    .primary-button,
    .secondary-button {
        width: 100%;
        justify-content: center;
    }
    
    .mission-section,
    .features-section {
        padding: 80px 20px;
    }
    
    .mission-title,
    .features-title {
        font-size: 36px;
    }
    
    .features-grid {
        grid-template-columns: 1fr;
        gap: 30px;
    }
    
    .modal-content {
        padding: 40px 25px;
    }
    
    .modal-japanese-title {
        font-size: 3.2rem;
    }
    
    .modal-body { /* Ensure base font size changes */
        font-size: 1rem;
    }
    
    .signature-name {
        font-size: 1.6rem;
    }
}

@media (max-width: 480px) {
    .hero-title {
        font-size: 32px;
    }
    
    .primary-button,
    .secondary-button {
        font-size: 14px;
        padding: 12px 24px;
    }
    
    .cta-button {
        font-size: 16px;
        padding: 14px 28px;
    }
    
    .modal-signature {
        flex-direction: column;
        align-items: center;
        gap: 20px;
    }
    
    .signature-text {
        text-align: center;
    }
}
